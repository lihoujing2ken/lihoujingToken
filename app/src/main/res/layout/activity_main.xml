<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ken="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#e8c810">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--第三方包的东西可以自己进去库里面去修改-->
        <com.astuetz.PagerSlidingTabStripMy
            android:id="@+id/main_tabstrip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ken:pstsIndicatorColor="#08116e"
            ken:pstsSelectTextViewColor="#6e0505"
            ken:pstsSelectTextViewSize="15sp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>